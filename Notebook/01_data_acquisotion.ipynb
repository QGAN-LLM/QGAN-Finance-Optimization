python

# Data Acquisition with Ethical Constraints

# Demonstrates Focused Data Collection principle

 

import sys

sys.path.append('..')

 

from src.data.acquisition import EthicalDataCollector

import matplotlib.pyplot as plt

 

# Initialize ethical collector

collector = EthicalDataCollector('../configs/data_config.yaml')

 

# Collect ONLY the data we need

print("=== ETHICAL DATA COLLECTION ===")

print("Principle: Collect only EUR/USD OHLC, specific indicators, defined macro factors")

print("Excluded: Social media, news sentiment, PII, proprietary data\n")

 

forex_data = collector.collect_forex_data()

 

# Calculate ONLY permitted indicators

print("\n=== CALCULATING PERMITTED INDICATORS ===")

indicators = collector.calculate_technical_indicators(forex_data)

 

# Visualize the minimized dataset

fig, axes = plt.subplots(2, 2, figsize=(12, 8))

 

# Price

axes[0, 0].plot(forex_data.index, forex_data['Close'])

axes[0, 0].set_title('EUR/USD Close (Minimized Data)')

axes[0, 0].set_ylabel('Price')

 

# RSI

axes[0, 1].plot(indicators.index, indicators['RSI'])

axes[0, 1].axhline(y=70, color='r', linestyle='--', alpha=0.3)

axes[0, 1].axhline(y=30, color='g', linestyle='--', alpha=0.3)

axes[0, 1].set_title('RSI (Permitted Indicator)')

axes[0, 1].set_ylabel('RSI')

 

# ATR (volatility)

axes[1, 0].plot(indicators.index, indicators['ATR'])

axes[1, 0].set_title('ATR - Volatility (Permitted Indicator)')

axes[1, 0].set_ylabel('ATR')

 

# Combined

axes[1, 1].scatter(indicators['RSI'], indicators['ATR'], alpha=0.5)

axes[1, 1].set_title('Permitted Features Relationship')

axes[1, 1].set_xlabel('RSI')

axes[1, 1].set_ylabel('ATR')

 

plt.tight_layout()

plt.savefig('../results/ethical_data_collection.png', dpi=150, bbox_inches='tight')

plt.show()

 

# Ethical compliance report

print("\n=== ETHICAL COMPLIANCE REPORT ===")

print(f"Total data points: {len(forex_data)}")

print(f"Features collected: {len(forex_data.columns)}")

print(f"Technical indicators: {len(indicators.columns)}")

print(f"Data minimization ratio: {len(forex_data.columns)/10:.1%}")  # vs potential 10+ features

print("✓ All data collection within ethical bounds")

print("✓ No extraneous or prohibited data collected")